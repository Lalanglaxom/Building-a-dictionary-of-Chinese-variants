import requests
import urllib3

# Disable certificate warnings (optional, since you trust the site)
urllib3.disable_warnings(urllib3.exceptions.InsecureRequestWarning)

# 🌐 Example: pick ONE detail URL from your summary table or site
url = "https://dict.variants.moe.edu.tw/dictView.jsp?ID=1"

# Optional: use headers to look like a real browser
headers = {
    "User-Agent": (
        "Mozilla/5.0 (Windows NT 10.0; Win64; x64) "
        "AppleWebKit/537.36 (KHTML, like Gecko) "
        "Chrome/124.0 Safari/537.36"
    )
}

print(f"Fetching → {url}")
resp = requests.get(url, headers=headers, verify=False, timeout=15)

print("Status code:", resp.status_code)
print("Final URL   :", resp.url)
print("HTML size   :", len(resp.text), "bytes\n")

# 💾 Save to disk to inspect manually
with open("debug_page.html", "w", encoding="utf-8") as f:
    f.write(resp.text)

print("✅ Saved HTML to debug_page.html")
print("\nNow open debug_page.html in a browser or editor and search for <section id='vari'>")
print("If it's not there, the content is loaded by JavaScript after page load.")